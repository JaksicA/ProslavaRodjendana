<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>AgencyCrudServlet</servlet-name>
        <servlet-class>servlets.AgencyCrudServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgencyServlet</servlet-name>
        <servlet-class>servlets.AgencyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CelebrationServlet</servlet-name>
        <servlet-class>servlets.CelebrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CelebrationCrudServlet</servlet-name>
        <servlet-class>servlets.CelebrationCrudServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdditionServlet</servlet-name>
        <servlet-class>servlets.AdditionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdditionCrudServlet</servlet-name>
        <servlet-class>servlets.AdditionCrudServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgencyCrudServlet</servlet-name>
        <url-pattern>/AgencyCrudServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgencyServlet</servlet-name>
        <url-pattern>/AgencyServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CelebrationServlet</servlet-name>
        <url-pattern>/CelebrationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CelebrationCrudServlet</servlet-name>
        <url-pattern>/CelebrationCrudServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdditionServlet</servlet-name>
        <url-pattern>/AdditionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdditionCrudServlet</servlet-name>
        <url-pattern>/AdditionCrudServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
